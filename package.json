{
  "name": "html-jest-reporter",
  "version": "0.0.2",
  "description": "Jest test results processor for generating a summary in HTML",
  "main": "./src/index",
  "scripts": {
    "test": "jest --no-cache --config=jest.config.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rohitjindal18/jest-html-reporter.git"
  },
  "keywords": [
    "jest",
    "html",
    "reporter",
    "report",
    "plugin"
  ],
  "license": "MIT",
  "dependencies": {
    "mkdirp": "0.5.1",
    "strip-ansi": "3.0.1",
    "xmlbuilder": "8.2.2"
  },
  "peerDependencies": {
    "jest": "19.x || 20.x || 21.x"
  },
  "devDependencies": {
    "jest": "^21.2.1",
    "jshint": "^2.9.5"
  },
  "html-reporter-jest": {
    "pageTitle": "Test Suite",
    "outputPath": "test-report.html",
    "includeFailureMsg": true
  }
}